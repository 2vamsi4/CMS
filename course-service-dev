spring:
  profiles: dev
  application:
    name: course-service
  datasource:
    url: jdbc:mysql://localhost:3306/courses_db?useSSL=false&serverTimezone=UTC
    username: root
    password: root
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect

server:
  port: 8087

management:
  endpoints:
    web:
      exposure:
        include: refresh,health,info

logging:
  level:
    root: DEBUG
